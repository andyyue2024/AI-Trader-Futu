# ===========================================
# AI Futu Trader - Environment Configuration
# Copy this file to .env and fill in your values
# ===========================================

# ===========================================
# Futu OpenD Configuration
# ===========================================
FUTU_HOST=127.0.0.1
FUTU_PORT=11111
FUTU_TRADE_ENV=SIMULATE
# FUTU_TRADE_ENV=REAL  # Uncomment for real trading
FUTU_TRADE_PASSWORD=your_trade_password_here
FUTU_RSA_PATH=

# ===========================================
# LLM Configuration
# ===========================================
LLM_PROVIDER=openai
# LLM_PROVIDER=anthropic

# OpenAI Settings
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=

# Anthropic Settings (if using Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# LLM Parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024
LLM_TIMEOUT=30

# ===========================================
# Trading Configuration
# ===========================================
# Comma-separated list of symbols to trade
TRADING_SYMBOLS=US.TQQQ,US.QQQ

# Default position size in USD
DEFAULT_POSITION_SIZE=10000

# Maximum position per symbol in USD
MAX_POSITION_PER_SYMBOL=50000

# Maximum acceptable slippage (0.002 = 0.2%)
SLIPPAGE_TOLERANCE=0.002

# ===========================================
# Risk Management
# ===========================================
# Maximum daily drawdown before circuit breaker (0.03 = 3%)
MAX_DAILY_DRAWDOWN=0.03

# Maximum total drawdown (0.15 = 15%)
MAX_TOTAL_DRAWDOWN=0.15

# Minimum target Sharpe ratio
MIN_SHARPE_RATIO=2.0

# Target daily trading volume in USD
DAILY_VOLUME_TARGET=50000

# Minimum acceptable fill rate (0.95 = 95%)
MIN_FILL_RATE=0.95

# ===========================================
# Performance Targets
# ===========================================
# Maximum order execution latency in milliseconds
MAX_ORDER_LATENCY_MS=1.4

# Maximum full pipeline latency in seconds
MAX_PIPELINE_LATENCY_S=1.0

# ===========================================
# Monitoring & Alerting
# ===========================================
PROMETHEUS_PORT=8000
GRAFANA_URL=http://localhost:3000

# Feishu (Lark) webhook for alerts
# Get this from Feishu bot settings
FEISHU_WEBHOOK_URL=

# Minimum interval between alerts in minutes
ALERT_COOLDOWN_MINUTES=5

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log
LOG_ROTATION=100 MB
LOG_RETENTION=7 days

# ===========================================
# Docker/Grafana
# ===========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
